# Copy this file to .env.local and fill all values.

# Backend base URL (required once backend is deployed/running)
BACKEND_URL=http://localhost:8787
VITE_BACKEND_URL=http://localhost:8787

# Backend runtime URLs
BACKEND_PUBLIC_URL=http://localhost:8787
FRONTEND_URL=http://localhost:5173
# Optional comma-separated extra origins (for preview/staging domains)
FRONTEND_URLS=

# Auth (Google OAuth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
AUTH_SESSION_SECRET=replace_with_a_long_random_secret
ADMIN_BOOTSTRAP_EMAILS=

# Payments (Stripe)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Email (Resend)
RESEND_API_KEY=re_xxx
